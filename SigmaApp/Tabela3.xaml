<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SigmaApp.Tabela3"
             xmlns:local="clr-namespace:SigmaApp">

    <ContentPage.Content>
        <Grid Padding="20" HorizontalOptions="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="250"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <Label Grid.ColumnSpan="3" Text="NBR ISO 13857 &#10; Estrutura de Proteção" HorizontalTextAlignment="Center" Margin="10" FontSize="Medium"/>
            <local:PinchPanContainer Grid.Row="1" Grid.ColumnSpan="3">
                <local:PinchPanContainer.Content>
                    <Image Source="Corpo"/>
                </local:PinchPanContainer.Content>
            </local:PinchPanContainer>

            <StackLayout Grid.Row="2" Grid.ColumnSpan="3" Orientation="Horizontal" Margin="10" HorizontalOptions="Center">
                <RadioButton x:Name="riscoAlto" IsChecked="True" Content="Risco Alto" FontSize="Small"/>
                <RadioButton x:Name="riscoBaixo" Content="Risco Baixo" FontSize="Small"/>
            </StackLayout>

            <StackLayout Grid.Row="3" Grid.Column="0" Orientation="Horizontal">
                <Label Text="Hh (A):" VerticalOptions="Center" FontSize="15"/>
                <Entry Keyboard="Numeric" ReturnType="Done" x:Name="Hh" MaxLength="4" VerticalOptions="Start" WidthRequest="40" FontSize="15" Placeholder="mm" TextChanged="TextChanged"/>
            </StackLayout>
            <StackLayout Grid.Row="3" Grid.Column="1" Orientation="Horizontal">
                <Label Text="Hps (B):" VerticalOptions="Center" FontSize="15"/>
                <Entry Keyboard="Numeric" x:Name="Hps" MaxLength="4" VerticalOptions="Start" WidthRequest="40" FontSize="15" Placeholder="mm" TextChanged="TextChanged"/>
            </StackLayout>
            <StackLayout Grid.Row="3" Grid.Column="2" Orientation="Horizontal">
                <Label Text="Sh (C):" VerticalOptions="Center" FontSize="15"/>
                <Entry Keyboard="Numeric" x:Name="Sh" MaxLength="4" VerticalOptions="Start" WidthRequest="40" FontSize="15" Placeholder="mm" TextChanged="TextChanged"/>
            </StackLayout>

            <Label x:Name="labelResultado"/>
            <Button Grid.Row="4" Grid.Column="1" x:Name="btnCalcular" Margin="0,20,0,0" Text="Calcular" Clicked="btnCalcular_Clicked"/>

        </Grid>
    </ContentPage.Content>
</ContentPage>